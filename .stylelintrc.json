{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-tailwindcss"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen"
        ]
      }
    ],
    "declaration-block-trailing-semicolon": null,
    "no-descending-specificity": null,
    "declaration-no-important": true,
    "selector-class-pattern": null
  },
  "ignoreFiles": [
    "node_modules/**/*",
    ".next/**/*",
    "out/**/*"
  ]
}
